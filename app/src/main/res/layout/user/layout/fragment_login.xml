<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <LinearLayout
        android:id="@+id/header_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/_16ssp"
        android:layout_marginStart="@dimen/_16ssp"
        android:paddingTop="@dimen/dp_60"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/app_name"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_26sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/_3sdp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_9sdp"
                app:errorTextAppearance="@style/EditTextErrorColor"
                app:hintTextAppearance="@style/LoginTilFloatingLabel"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_login_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:hint="@string/hint_email_address_txt"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="textEmailAddress"
                    android:maxLength="60"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textColor="@color/color_2d2d2d"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/_16ssp"
                    tools:ignore="RtlSymmetry" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_9sdp"
                app:errorTextAppearance="@style/EditTextErrorColor"
                app:hintTextAppearance="@style/LoginTilFloatingLabel"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:hint="@string/login_pass_hint"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="textPassword"
                    android:maxLength="60"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textColor="@color/color_2d2d2d"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/_16ssp"
                    tools:ignore="RtlSymmetry" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24ssp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_login"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/selector_btn"
                android:gravity="center"
                android:text="@string/text_sign_in"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp" />

        </LinearLayout>
    </LinearLayout>

    <!--</RelativeLayout>-->
    <!--</android.support.v4.widget.NestedScrollView>-->
</RelativeLayout>