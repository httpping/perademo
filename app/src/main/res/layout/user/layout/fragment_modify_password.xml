<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView

        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_save"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.pera.tanping.peratech.framework.widget.EditTitleView
                android:id="@+id/ll_account_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:et_content="@string/modify_password_old"
                app:tv_title="@string/modify_password_old" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_e5e5e5" />

            <com.pera.tanping.peratech.framework.widget.EditTitleView
                android:id="@+id/ll_account_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:et_content="@string/modify_password_new"
                app:tv_title="@string/modify_password_new" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_e5e5e5" />

            <com.pera.tanping.peratech.framework.widget.EditTitleView
                android:id="@+id/modify_password_new_retry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:et_content="@string/modify_password_new_retry"
                app:tv_title="@string/modify_password_new_retry" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_e5e5e5" />

        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/bt_save"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_btn"
        android:gravity="center"
        android:text="@string/text_save"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp" />
</RelativeLayout>